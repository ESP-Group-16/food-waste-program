<resources xmlns:tools="http://schemas.android.com/tools">
    <string name="app_name">ESP Project</string>
    <!-- Base application theme. -->
    <style name="Theme.ESPProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_color_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_200</item>
        <item name="colorOnSecondary">@color/text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ESPProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ESPProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ESPProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>