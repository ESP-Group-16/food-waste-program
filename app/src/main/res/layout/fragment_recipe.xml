<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentRecipeRelLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/fragmentRecipeTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color_light"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragmentRecipeBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@color/secondary_color_light"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:contentDescription="back button"
            />

        <TextView
            android:id="@+id/fragmentRecipeRecipeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe name"
            android:textColor="@color/main_background"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/fragmentRecipeScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragmentRecipeTopBar">
        <RelativeLayout
            android:id="@+id/fragmentRecipeScrollRelLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/fragmentRecipeImage"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:src="@drawable/foodPlaceholder"
                android:contentDescription="Image of food" />

            <TextView
                android:id="@+id/fragmentRecipeIngredientsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients:"
                android:layout_below="@id/fragmentRecipeImage"
                android:textSize="40sp"
                android:paddingHorizontal="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragmentRecipeIngredientsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmentRecipeIngredientsTxt" />

            <TextView
                android:id="@+id/fragmentRecipeMethodTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Method:"
                android:layout_below="@id/fragmentRecipeIngredientsRecycler"
                android:textSize="40sp"
                android:paddingHorizontal="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragmentRecipeMethodRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragmentRecipeMethodTxt"
                android:layout_marginBottom="200sp" />


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/text_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAVBAR"
            android:textColor="@color/main_background"
            android:textSize="30sp"/>

    </LinearLayout>
</RelativeLayout>