<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingListFragment">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Shopping List"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/RelativeLayout1">

        <Button
            android:id="@+id/button_AddItem"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Add items" />

        <TextView
            android:id="@+id/txtItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_centerInParent="true"
            android:layout_marginEnd="30dp"
            android:text="5 items" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/Scroll1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/RelativeLayout2">

        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Fridge"
                android:textSize="35dp"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/txt1"
                android:text="Carrots"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="30dp"
                android:text="2 bags" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="300dp"
                android:text="Cupboard"
                android:textSize="35dp" />

            <TextView
                android:id="@id/txt2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Pasta"
                android:layout_below="@id/txt3"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="30dp"
                android:text="1 box" />

        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/Scroll1">

        <Button
            android:id="@+id/button_Finishshop"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Finish Shop" />

    </RelativeLayout>


</RelativeLayout>