<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentRecipeListTitleRelLay"
        android:background="@color/secondary_color_light">

        <!-- Back button takes you back to the list of recipes -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentRecipeListBackBtn"
            android:drawableLeft="@drawable/baseline_arrow_back_30"
            android:backgroundTint="@color/secondary_color_light"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/fragmentRecipeListTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/fragmentRecipeListBackBtn"
            android:text="Search result for ..."
            android:textColor="@color/text_color_alt"
            android:textSize="30sp" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentRecipeListRecyclerView"
        android:layout_below="@+id/fragmentRecipeListTitleRelLay"
        android:layout_margin="10dp" />

</RelativeLayout>