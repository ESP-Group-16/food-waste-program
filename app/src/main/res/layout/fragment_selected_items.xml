<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedItemsFragment"
    android:padding="15dp"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/fragmentSelectedItemsTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have bought"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentSelectedItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragmentSelectedItemsTitleTxt"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/fragmentSelectedItemsAddToPantryButton"
        android:text="Add selected items to pantry"
        android:textAllCaps="false" />

</RelativeLayout>