<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <RelativeLayout
        android:id="@+id/youHaveBoughtRelLay1"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/youHaveBoughtTxtBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="You have bought"
            android:textSize="33dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll11"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@+id/youHaveBoughtRelLay1">

        <RelativeLayout
            android:id="@+id/youHaveBoughtRelLay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textBox1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Carrots"
                android:textSize="35dp"/>

            <TextView
                android:id="@+id/quantityTxtBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="2 bags" />

            <TextView
                android:id="@+id/expiryDateTxtBox"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/textBox1"
                android:text="Enter expiry date"
                android:textSize="15dp"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/youHaveBoughtRelLay3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scroll11">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Add selected to shared pantry" />

    </RelativeLayout>

</RelativeLayout>