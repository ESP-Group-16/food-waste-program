<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40sp"
        android:id="@+id/activityMainLoginTxt" />

    <TextView
        android:id="@+id/activityMainEmailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityMainLoginTxt"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textSize="20sp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityMainEmailTxt"
        android:id="@+id/activityMainEmailEdtTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:layout_below="@+id/activityMainEmailEdtTxt"
        android:layout_marginTop="20dp"
        android:id="@+id/activityMainPasswordTxt" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityMainPasswordTxt"
        android:inputType="textPassword"
        android:id="@+id/activityMainPasswordEdtTxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/activityMainPasswordEdtTxt"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/activityMainLoginButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:layout_below="@+id/activityMainLoginButton"
        android:id="@+id/activityMainNoAccountTxt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityMainNoAccountTxt"
        android:text="Register"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/activityMainRegisterButton" />

</RelativeLayout>