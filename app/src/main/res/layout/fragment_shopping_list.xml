<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingListFragment">

    <TextView
        android:id="@+id/fragmentShoppingListTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_color_light"
        android:padding="10dp"
        android:text="Shopping List"
        android:textAlignment="center"
        android:textColor="@color/text_color_alt"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentShoppingListAddItem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentShoppingListTitleTxt"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_button"
        android:text="Add items"
        android:textColor="@color/text_color_alt" />

    <TextView
        android:id="@+id/fragmentShoppingListQuantityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentShoppingListAddItem"
        android:layout_centerInParent="true"
        android:layout_marginEnd="30dp"
        android:text="5 items" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentShoppingListFridgeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentShoppingListQuantityTxt"
        android:paddingHorizontal="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="70dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragmentShoppingListFinishButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:text="Finish Shop"
        android:textColor="@color/text_color_alt" />


</RelativeLayout>