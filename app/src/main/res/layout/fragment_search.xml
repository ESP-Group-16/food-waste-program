<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentSearchTopRelLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/fragmentSearchBackButton"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/fragmentSearchBarEdtTxt"
            android:layout_width="250dp"
            android:hint="Search for a recipe..."
            android:textColorHint="@color/text_color_hint"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/fragmentSearchBackButton" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's new?"
        android:layout_below="@+id/fragmentSearchTopRelLayout"
        android:layout_marginTop="40dp"
        android:id="@+id/fragmentSearchWhatsNewTxt"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentSearchWhatsNewTxt"
        android:id="@+id/fragmentSearchRecipeRecyclerView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by cuisine"
        android:id="@+id/fragmentSearchByCuisineTxt"
        android:layout_below="@+id/fragmentSearchRecipeRecyclerView"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/text_color" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Asian"
        android:layout_below="@+id/fragmentSearchByCuisineTxt"
        android:id="@+id/fragmentSearchAsianCuisineButton" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentSearchAsianCuisineButton"
        android:text="Soup"
        android:id="@+id/fragmentSearchSoupCuisineButton" />

</RelativeLayout>