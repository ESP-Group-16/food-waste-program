<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantryItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtPantryItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2sp"
            android:text="Item name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPantryItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPantryItemName"
            android:text="Quantity" />

        <TextView
            android:id="@+id/txtPantryItemExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPantryItemQuantity"
            android:text="Expiry Date" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>